[Unit]
Description=StreamLive Application
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/streamlive
Environment="PATH=/home/ubuntu/streamlive/venv/bin"
ExecStart=/home/ubuntu/streamlive/venv/bin/gunicorn -w 4 -b 127.0.0.1:5000 app:app
Restart=always
RestartSec=10

# Logging
StandardOutput=append:/var/log/streamlive.out.log
StandardError=append:/var/log/streamlive.err.log

[Install]
WantedBy=multi-user.target
